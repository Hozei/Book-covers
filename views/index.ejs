<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Cover Website</title>
    <style>

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f2f2f2;
        }
        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
        }
        .book-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }
        .book-card {
            width: 200px;
            margin-bottom: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            overflow: hidden;
        }
        .book-cover {
            width: 100%;
            height: auto;
        }
        .book-title {
            padding: 10px;
            text-align: center;
            font-size: 20px;
            font-weight: 200;

        }
        footer {
            flex: 0 0 auto;
            color: black;
            text-align: center;
            flex-shrink: 0;
            margin-top: 100px;
        }


    </style>
</head>
<body>
    <div class="container">
        <h1>Book Covers</h1>
        <div class="book-container">
            <% book_items.forEach(book => { %>
                <div class="book-card">
                    <img class="book-cover" src="/images/<%= book.cover %>" alt="<%= book.title %> Cover">
                    <div class="book-title"><%= book.title %></div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
<%- include('partials/footer.ejs'); -%>
